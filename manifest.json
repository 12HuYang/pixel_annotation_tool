{
  "manifest_version": 4,
  "name": "Pixel Annotation Tool",
  "description": "This extension for generate pixel rule script",
  "version": "1.6",
  "background": {
    "scripts": ["./build/background.js"]
  },
  "icons":
  {
    "16": "spider_16.png",
    "48": "spider_48.png",
    "128": "spider_128.png"
  },
  "browser_action": {
    "default_icon": "./spider-black_48.png",
    "default_title": "Annotation"
  },
  /// for test
  "content_scripts" : [{
    "matches": ["http://rainx.cn/"],
    "js" : ["./build/test.js"]
  }],
  "web_accessible_resources" : [
    "build/test.js.map",
    "build/main.js.map"
  ],
  /// for test end
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
